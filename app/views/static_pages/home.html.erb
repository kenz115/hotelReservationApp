<div id="fv">
    <div id="area-search-field">
        <h2>Potepan Shareでまだ体験したことのない旅をしよう</h2>
        <%= form_with url: "/rooms/search", method: :get, local: true do |f| %>
            <p>エリア</p>
            <%= f.text_field :area, placeholder: "東京" %><br>
            <%= f.submit "探す" %>
        <% end %>
    </div>
</div>
<div id="recommended-area">
    <h3>おすすめのエリア</h3>
    <div class="flex">
        <div class="areas">
            <%= link_to "/rooms/search?area=東京", method: :get,locale: true do %>
                <%= image_tag "img_tokyo" %>
                <span>東京</span>
            <% end %>
        </div>
        <div class="areas">
            <%= link_to "/rooms/search?area=大阪", method: :get,locale: true do %>
                <%= image_tag "img_osaka" %>
                <span>大阪</span>
            <% end %>
        </div>
        <div class="areas">
            <%= link_to "/rooms/search?area=京都", method: :get,locale: true do %>
                <%= image_tag "img_kyoto" %>
                <span>京都</span>
            <% end %>
        </div>
        <div class="areas">
            <%= link_to "/rooms/search?area=札幌", method: :get,locale: true do %>
                <%= image_tag "img_sapporo" %>
                <span>札幌</span>
            <% end %>
        </div>
    </div>
</div>