<div id="show-reservation">
    <div id="reservation">
        <p>
            <span>予約した部屋</span>
            <%= @reservation.room.name %>
        </p>
        <p>
            <span>開始日</span>
            <%= @reservation.start_date.to_s(:datetime_jp) %>
        </p>
        <p>
            <span>終了日</span>
            <%= @reservation.end_date.to_s(:datetime_jp) %>
        </p>
        <p>
            <span>価格</span>
            <%= @total_fee %>
        </p>
    </div>
</div>