<div id="show">
    <div class="flex-align-start">
        <div id="room-detail">
            <div id="room-img">
                <%= image_tag @room.image %>
            </div>
            <div class="flex-left">
                <div id="user-icon">
                    <%= image_tag @room.user.image %>
                </div>
                <div>
                    <p><%= @room.name %></p>
                    <p><%= @room.address %></p>
                </div>
            </div>
            <p id="room-introduction"><%= @room.introduction %></p>
        </div>
        <div id="reservation-form">
            <p id="room-fee"><%= @room.fee %> / 日</p>
            <%= form_with model: @user do |f| %>
                <p><%= f.label :start_date, "開始日" %></p>
                <p><%= f.date_field :start_date, id: "start_date" %></p>
                <p><%= f.label :end_date, "終了日" %></p>
                <p><%= f.date_field :end_date, id: "end_date" %></p>
                <p><%= f.label :number_of_peaple, "人数" %></p>
                <p><%= f.text_field :number_of_peaple %></p>
                <% if logged_in? %>
                    <%= f.submit "予約する" %>
                <% else %>
                    <%= link_to "ログイン", '/users/sign_in' %>
                <%end%>
            <% end %>
        </div>
    </div>
</div>
