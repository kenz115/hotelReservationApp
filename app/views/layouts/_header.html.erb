<header>
    <div class="flex">
        <div class="flex">
            <div id="header-logo">
                <%= link_to root_path do %>
                    <%= image_tag 'logo.png' %>
                <% end %>
            </div>
            <div class="flex">
                <div class="header-search-field">
                    <input type="text" placeholder="エリア">
                    <i class="fas fa-map-marker-alt"></i>
                </div>
                <div class="header-search-field">
                    <input type="text" placeholder="キーワード">
                    <i class="fas fa-search"></i>
                </div>
            </div>
        </div>
        <div id="header-nav-right">
            <%= link_to "ログイン", '/users/sign_in', id: "login-btn" %>
            <%= link_to "登録する", '/users/sign_up', id: "register-btn" %>
        </div>
    </div>
</header>