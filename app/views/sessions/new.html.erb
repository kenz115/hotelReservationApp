<div class="sign">
    <div class="sign-wrap">
        <p>ログイン</p>
        <%= form_with(url: '/users/sign_in', scope: :session, local: true) do |f| %>
            <%= f.label :name, "必須" %>
            <%= f.text_field :email, placeholder: "メールアドレス" %><br>
            <%= f.label :password, "必須" %>
            <%= f.password_field :password, placeholder: "パスワード" %><br>
            <%= f.submit "ログイン" %>
        <% end %>
        <%= link_to "新しいアカウントを作成", '/users/sign_up', class: "sign-link" %>
    </div>
</div>